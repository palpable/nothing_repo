<div id="backEnd">
  <div class="pageHdr">
    <h4>Global Preferences</h4>
  <%= link_to 'Edit', edit_admin_preference_path(@preferences),:class =>'plusLink roadshow' %>
  </div>
<%if flash[:error]%>
<%end%>
    <div class="leftContent wide">
<p>
  <p>Application name =
  <%= h @preferences.app_name %></p>
</p>

<p>
  <p>Email domain =
  <%=h @preferences.domain %></p>
</p>

<p>
  <p>Server name =  <%=h @preferences.server_name %></p>
</p>

<p>
  <p>Smtp server =
  <%=h @preferences.smtp_server %></p>
</p>

<p>
  <p> Email notifications = <%=h @preferences.email_notifications %></p>
</p>

<p>
  <p>Email verifications =
  <%=h @preferences.email_verifications %></p>
</p>

<p>
  <p>Demo site =
  <%=h @preferences.demo %></p>
</p>

<p>
  <p>Whitelist = <%=h @preferences.whitelist %></p>
</p>

<p>
 <p> <h4>About text (nonblank text will lead to an 'about' link)</h4>
  <%= display @preferences.about %></p>
</p>

<p>
 <p> <h4>Analytics (will be inserted just before the <%= h("</body>") %> tag)</h4>
  <%- unless @preferences.analytics.blank? -%>
    <pre><%=h @preferences.analytics %></pre>
  <%- end -%></p>
</p>
</div>
</div>
