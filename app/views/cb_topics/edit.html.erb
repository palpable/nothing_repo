<h2>Editing topic (<%= link_to 'Show', cb_forum_cb_topic_path(@cb_forum, @cb_topic) %>)</h2>

<%= error_messages_for :cb_topic %>

<% form_for :cb_topic, :url => cb_forum_cb_topic_path(@cb_forum, @cb_topic),
            :html => { :method => :put} do |f| %>

  <div class="prefItem">
    <div class="prefLabel">Forum</div>
    <div class="prefValue"><%= f.text_field :cb_forum_id %></div>
  </div>
  <div class="prefItem">
    <div class="prefLabel">Person</div>
    <div class="prefValue"><%= f.text_field :person_id %></div>
  </div>
  <div class="prefItem">
    <div class="prefLabel">Name</div>
    <div class="prefValue"><%= f.text_field :name %></div>
  </div>
  <div class="prefItem">
    <div class="prefLabel">Posts count</div>
    <div class="prefValue"><%= f.text_field :cb_posts_count %></div>
  </div>
  <div>
    <%= f.submit "Update", :class => "button" %> <%= f.submit 'Cancel', :class => 'button', :id => "cancel" %>
  </div>
<% end %>