<h2><span class="fn n">Registration Form</h2>

<%= error_messages_for :reg_issuers %>

 <% form_for :reg_issuers, @reg_issuers , :url => { :action => "create_issuers" } do |f| %>
 
  <div class="form_row">
    <label for="person_name">Name  <br>
    <%= f.text_field :name %>
  </div>
 
  <div class="form_row">
    <label for="email">Email  <br>
    <%= f.text_field :email %>
  </div>
 
  <div class="form_row">
    <label for="telephone">Telephone  <br>
    <%= f.text_field :telephone %>
  </div>
 
  <div class="form_row">
    <label for="fax_number">Fax Number  <br>
    <%= f.text_field :fax_number %>
  </div>
 
  <div class="form_row">
    <label for="address">Address  <br>
    <%= f.text_field :address %>
  </div>
 
  <div class="form_row">
    <label for="person_name">City  <br>
    <%= f.text_field :city %>
  </div>
 
  <div class="form_row">
    <label for="state">State  <br>
    <%= f.text_field :state %>
  </div>
 
  <div class="form_row">
    <label for="country">Country  <br>
    <%= f.text_field :country %>
  </div>
 
  <div class="form_row">
    <label for="website">website  <br>
    <%= f.text_field :website %>
  </div>

  <div class="form_row">
    <label for="issuer_type">Issuers Type  <br>
	<%= select_tag  "issuers_type", options_for_select([ "Supranational and Sovereign issuers", "Asset Managers","Hedge Funds","Banks and dealers","Other issuers"], :selected => "Supranational and Sovereign issuers") %>
  </div>

    <%= submit_tag 'Register', :class => "button" %>
 
 <%end%>
